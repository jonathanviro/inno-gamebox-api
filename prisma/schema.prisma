generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String      @id @default(uuid())
  email     String      @unique
  telephone String?
  firstName String
  lastName  String
  password  String
  isActive  Boolean     @default(true)
  companies Companies[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Companies {
  id        String   @id @default(uuid())
  name      String
  userId    String
  user      Users    @relation(fields: [userId], references: [id])
  isActive  Boolean  @default(true)
  events    Events[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Events {
  id           String         @id @default(uuid())
  name         String
  startDate    DateTime
  endDate      DateTime
  companyId    String
  company      Companies      @relation(fields: [companyId], references: [id])
  isActive     Boolean        @default(true)
  devices      Devices[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  participants Participants[]
}

model Devices {
  id           String         @id @default(uuid())
  name         String
  eventId      String
  event        Events         @relation(fields: [eventId], references: [id])
  isActive     Boolean        @default(true)
  products     Products[]
  participants Participants[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Products {
  id           String         @id @default(uuid())
  name         String
  stock        Int
  imageUrl     String?
  deviceId     String
  device       Devices        @relation(fields: [deviceId], references: [id])
  isActive     Boolean        @default(true)
  consumptions Consumptions[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Participants {
  id           String         @id @default(uuid())
  invoice      String
  firstName    String
  lastName     String
  email        String?
  eventId      String
  event        Events         @relation(fields: [eventId], references: [id])
  isActive     Boolean        @default(true)
  consumptions Consumptions[]
  deviceId     String?
  device       Devices?       @relation(fields: [deviceId], references: [id])
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Consumptions {
  id            String       @id @default(uuid())
  participantId String
  participant   Participants @relation(fields: [participantId], references: [id])
  productId     String
  product       Products     @relation(fields: [productId], references: [id])
  amount        Int          @default(1)
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}
